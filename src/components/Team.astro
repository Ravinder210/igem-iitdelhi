<astro>
  <style>
    .team-img-wrapper {
      position: relative;
      overflow: hidden;
    }
  
    .overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      opacity: 0;
      transition: opacity 0.3s ease;
      display: flex;
      justify-content: center;
      align-items: center;
      background-color: rgba(0, 0, 0, 0.5); /* Changed background color to semi-transparent black */
    }
  
    .overlay:hover {
      opacity: 1;
    }
  
    .team-img {
      transition: filter 0.3s ease;
      height: 240px;
      width: 240px;
    }
  
    .overlay:hover + .team-img {
      filter: blur(5px);
    }
  
    .member-name {
      color: white; /* Setting text color to white */
      font-weight: bold;
      font-size: 1.5rem;
      text-align: center;
      opacity: 1;
      transition: opacity 0.3s ease;
      z-index: 100;
      font-family:Arial, Helvetica, sans-serif;
    }
  
    .overlay:hover +  .member-name {
      opacity: 1;
    }
  </style>
  
  <Container>
    <div id="team" class="mb-12 space-y-2 m-[150px] text-center">
